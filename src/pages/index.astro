---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Peter Witham - Developer, Podcaster, Streamer',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'About Me',
        href: '/about',
        target: '_self',
        icon: 'tabler:user-circle',
      },
      { text: 'Contact', href: '/contact' },
    ]}
  >
    <Fragment slot="title">
      <span class="tracking-wide">Inspire &#123; <span class="text-red-500">Create</span> &#125; Ship</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        <span class="font-semibold mr-2">Hi there!</span> I am obsessed with making great things</span>
    </Fragment>
  </Hero>
  <!-- HighlightedPosts Widget ******* -->

  <BlogLatestPosts
    title="Latest Blog Posts" information={``}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Contact me',
        href: '/contact',
        target: '_blank',
        icon: 'tabler:mail-filled',
      },
    ]}
  >
    <Fragment slot="title">
      Let's Talk
    </Fragment>

    <Fragment slot="subtitle">
      I love to help folks get where they want to be, whether it's an app or spreading some cheer on my Podcasts. So why not reach out and let's start a conversation today.
    </Fragment>
  </CallToAction>
</Layout>
