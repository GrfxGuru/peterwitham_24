---
import ContactUs from "~/components/widgets/Contact.astro";
import HeroText from "~/components/widgets/HeroText.astro";
import Layout from "~/layouts/PageLayout.astro";

const metadata = {
	title: "Endless Hurdles Support & Feedback",
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="" title="Endless Hurdles <br/> Support & Feedback"/>

  <ContactUs
    title="Endless Hurdles Feedback and Support Form"
    subtitle="This is the place to provide feedback <br/> and ask for help with my Endless Hurdles game."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Name',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email',
      },
    ]}
    button = {
      "Submit"
    }
    textarea={{
      label: 'Message',
    }}
    disclaimer={{
      label:
        'By submitting this contact form, you acknowledge and agree to the collection of your personal information.',
    }}
    description="I try to respond within 48 hours."
  />
</Layout>
