---
import Layout from '~/layouts/PageLayout.astro';
import Hero2 from '~/components/widgets/Hero2.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Content from '~/components/widgets/Content.astro';
import Button from '~/components/ui/Button.astro';
import Image from '~/components/common/Image.astro';
import appStoreImg from '~/assets/images/app-store.png';

const appStoreDownloadLink = 'https://apps.apple.com/us/app/fx-preset-manager/id1641049812';

const metadata = {
  title: 'FX Preset Manager',
};
---

<Layout metadata={metadata}>
  <!-- Hero2 Widget ******************* -->
  <Hero2
    tagline=""
    image={{
      src: '/images/projects/fxpm/screen1.png',
      alt: 'FX Preset Manager Hero Image',
    }}
  >
    <Fragment slot="title">
      <span class="text-accent dark:text-white highlight">FX Preset Manager</span>: <br /> FujiFilm preset manager <span
      class="hidden xl:inline">made easy</span
    >
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        This application enables FujiFilm camera system users to record their custom presets and have them available at all times. The reason for this is the limited capacity to store presets in the camera.
      </span>
    </Fragment>

    <div slot="actions" class="flex max-w-sm gap-4">
      <Button variant="link" href={appStoreDownloadLink}>
        <Image src={appStoreImg} alt="App Store Image" width={200} />
      </Button>
    </div>
  </Hero2>
  <!-- Features3 Widget ************** -->
  <Features3
    id="features"
    title="How to use the app?"
    subtitle=""
    tagline="Step-by-step guide"
    columns={2}
    items={[
      {
        title: 'Download and install the app',
        description: 'Download the app from the Apple AppStore. Swipe through the on-boarding screens.',
        icon: 'tabler:square-number-1',
      },
      {
        title: 'Add presets',
        description: 'Use the + button to create new presets. Enter the settings for the preset and click save.',
        icon: 'tabler:square-number-2',
      },
      {
        title: 'To view or edit a preset',
        description: 'Tap on the preset in the list to view the details. You can return to the list or click the edit button to make changes, then save.',
        icon: 'tabler:square-number-3',
      },
      {
        title: 'Remove a preset by swiping left and choosing delete.',
        description: `When you no longer need to keep a preset, you can delete from the list with swipe.`,
        icon: 'tabler:square-number-4',
      },
    ]}
  />

  <!-- Content Widget **************** -->
  <Content
    isReversed
    items={[
      {
        title: 'User-friendly interface',
        description:
          'An intuitive and easy-to-navigate interface letting users do what they need to and get back to taking beautiful photographs.',
        icon: 'tabler:wand',
      },
      {
        title: 'Quickly view presets',
        description:
          'One tap is all it takes to view a preset. You can then enter it on your camera, due to FujiFilm limitations the process is not automated at this time.',
        icon: 'tabler:settings',
      },
      {
        title: 'Store as many presets as you want',
        description:
          'Go beyond the limited amount of custom presets that can be stored on your camera. By using the app you can have a reference library with you all the time.',
        icon: 'tabler:template',
      },
    ]}
    image={{
      src: '/images/projects/fxpm/screen2.png',
      alt: 'Job Finder Tracker edit job screen',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Main Features</h3>
    </Fragment>
  </Content>

  <!-- CallToAction Widget *********** -->

  <CallToAction
    id="download"
    title="Download the free app now!"
    subtitle=""
  >
    <div slot="actions" class="flex max-w-sm gap-4">
      <Button variant="link" href={appStoreDownloadLink}>
        <Image src={appStoreImg} alt="App Store Image" width={200} />
      </Button>
    </div>
  </CallToAction>
</Layout>
